{
  "version": 2,
  "builds": [
    {
      "src": "src/pages/**/*",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "CHANNEL_ACCESS_TOKEN": "@channel_access_token",
    "CHANNEL_SECRET": "@channel_secret",
    "MONGO_URI": "@mongo_uri",
    "LIFF_ID": "@liff_id",
    "DATABASE_URL": "@database_url"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/src/pages/$1"
    }
  ]
}