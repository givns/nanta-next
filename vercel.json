{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/send-overtime-digests",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/sync-attendance",
      "schedule": "*/10 5-8,17-23 * * *"
    },
    {
      "path": "/api/cron/sync-attendance",
      "schedule": "*/15 9-16 * * *"
    },
    {
      "path": "/api/cron/sync-attendance",
      "schedule": "0 0-4 * * *"
    },
    {
      "path": "/api/cron/sync-attendance",
      "schedule": "30 23 * * *"
    },
    {
      "path": "/api/cron/sync-holidays",
      "schedule": "0 0 1 1 *"
    },
    {
      "path": "/api/cron/sync-holidays",
      "schedule": "0 0 * * *"
    }
  ]
}