{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "LINE_CHANNEL_ACCESS_TOKEN": "@line_channel_access_token",
    "LINE_CHANNEL_SECRET": "@line_channel_secret",
    "MONGO_URI": "@mongo_uri",
    "LIFF_URL": "@liff_url",
    "NEXT_PUBLIC_LIFF_ID": "@next_public_liff_id",
    "DATABASE_URL": "@database_url"
  },
  "crons": [
    {
      "path": "/api/cron/send-overtime-digests",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/sync-attendance",
      "schedule": "*/10 5-8,17-23 * * *"
    },
    {
      "path": "/api/cron/sync-attendance",
      "schedule": "*/15 9-16 * * *"
    },
    {
      "path": "/api/cron/sync-attendance",
      "schedule": "0 0-4 * * *"
    },
    {
      "path": "/api/cron/sync-attendance",
      "schedule": "30 23 * * *"
    },
    {
      "path": "/api/cron/sync-holidays",
      "schedule": "0 0 1 1 *"
    },
    {
      "path": "/api/cron/sync-holidays",
      "schedule": "0 0 * * *"
    }
  ]
}